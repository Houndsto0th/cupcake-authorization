= form_for(@cupcake, url: bake_path, html:{class: "form-horizontal"}) do |f|
  = render 'mishap'
  .form-group
    =f.label :username, class: "control-label col-sm-4 col-sm-offset-1"
    .col-sm-3
      =f.text_field :username, class: "form-control"

  .form-group
    =f.label :email, class: "control-label col-sm-4 col-sm-offset-1"
    .col-sm-3
      =f.text_field :email, class: "form-control"

  .form-group
    =f.label :password, class: "control-label col-sm-4 col-sm-offset-1"
    .col-sm-3
      =f.password_field :password, class: "form-control"

  .form-group
    =f.label :password_confirmation, class: "control-label col-sm-4 col-sm-offset-1"
    .col-sm-3
      =f.password_field :password_confirmation, class: "form-control"

  .form-group
    =f.submit "Bake", class: "btn btn-lg btn-default "
